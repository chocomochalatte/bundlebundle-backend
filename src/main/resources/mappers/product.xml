<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tohome.bundlebundle.product.mapper.ProductMapper">

    <select id="findAllProductsByPopularity" resultType="ProductVO">
        <![CDATA[
        SELECT * FROM PRODUCT
        ORDER BY ID
        ]]>
        <!-- 수정 필요 -->
    </select>

    <select id="findAllProductsByLatest" resultType="ProductVO">
        <![CDATA[
        SELECT * FROM PRODUCT
        ORDER BY CREATED_AT DESC
        ]]>
    </select>

    <select id="findAllProductsPriceAsc" resultType="ProductVO">
        <![CDATA[
        SELECT * FROM PRODUCT
        ORDER BY PRICE ASC
        ]]>
    </select>

    <select id="findAllProductsByPriceDesc" resultType="ProductVO">
        <![CDATA[
        SELECT * FROM PRODUCT
        ORDER BY PRICE DESC
        ]]>
    </select>

    <select id="findAllProductsByDiscount" resultType="ProductVO">
        <![CDATA[
        SELECT * FROM PRODUCT
        ORDER BY ID
        ]]>
    </select>

    <select id="findProductById" resultType="ProductVO">
        <![CDATA[
        SELECT * FROM PRODUCT
        WHERE ID = #{productId}
        ]]>
    </select>

</mapper>
